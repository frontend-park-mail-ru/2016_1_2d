<fest:template xmlns:fest="http://fest.mail.ru">
    <div id="main" class="wrap">
        <div class="wrap__layout">
            <div class="logo">
                <img src="/media/bomb_logo.png"></img>
            </div>
            <div class="menu">
                <div class="menu__title">
                    Register
                </div>
                <div class="form">
                    <form name="registration">
                        <input name="login"  class="text_input" placeholder="Login" id="login-input"></input>
                        <input name="password" type="password"  placeholder="Password" class="text_input" id="password-input"></input>
                        <input type="submit" class="submit_input" value="Register" id='sign-up'></input>
                    </form>
                </div>
                <button class="menu__btn  menu__btn--back" id="main">
                    Back
                </button>
            </div>
        </div>
        <div class="alert-box error" id="err-message" style="display: none">
        </div>
    </div>
</fest:template>